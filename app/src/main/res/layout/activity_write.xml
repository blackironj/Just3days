<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/notepad_texture"
        tools:context=".WriteTextActivity">

    <EditText
            android:layout_width="379dp"
            android:layout_height="638dp"
            android:inputType="textNoSuggestions"
            android:background="@android:color/transparent"
            android:cursorVisible="false"
            android:ems="10"
            android:textAlignment= "center"
            android:id="@+id/writeText"
            android:fontFamily="@font/sinbi"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.482" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.489"/>

    <Button
            android:background="@android:color/transparent"
            android:layout_width="138dp"
            android:layout_height="74dp"
            android:id="@+id/btnSaveData" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.783" app:layout_constraintHorizontal_bias="0.498"/>

    <com.just3days.custom_view.OutlineTextView
            android:text="å¿ƒ"
            android:id="@+id/textOnBtn"
            android:layout_width="165dp"
            android:layout_height="93dp"
            android:textColor="@android:color/transparent"
            app:outlineWidth="1.0sp"
            app:outlineColor="@android:color/black"
            android:textSize="70sp"
            android:gravity="center"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/writeText" app:layout_constraintVertical_bias="0.768"
            app:layout_constraintHorizontal_bias="0.492"/>

</android.support.constraint.ConstraintLayout>